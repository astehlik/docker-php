FROM {{ baseImage }}

ENV DEBIAN_FRONTEND noninteractive
ENV LANG C.UTF-8

RUN apt-get update \
    && apt-get dist-upgrade -y \
    && apt-get install -y curl gnupg \
    && mkdir -p /usr/share/keyrings \
    && gpg --receive-keys --keyserver hkps://keyserver.ubuntu.com --recv-keys 71daeaab4ad4cab6 \
    && gpg -a --export 71daeaab4ad4cab6 | gpg --dearmor > /usr/share/keyrings/ondrej.gpg \
    && rm -Rf /root/.gnupg \
    && . /etc/lsb-release \
    && echo "deb [signed-by=/usr/share/keyrings/ondrej.gpg] https://ppa.launchpadcontent.net/ondrej/php/ubuntu $DISTRIB_CODENAME main " | tee /etc/apt/sources.list.d/ondrej.list \
    && apt-get update -y \
    && apt-get install -y --no-install-recommends \
{% if phpVersion < "8.2" %}
	php{{ phpVersion }}-apcu \
{% endif %}
{% if phpVersion >= "7.0" and phpVersion < "8.0" %}
	php{{ phpVersion }}-apcu-bc \
{% endif %}
php{{ phpVersion }}-curl \
        php{{ phpVersion }}-gd \
{% if phpVersion < "8.2" %}
	php{{ phpVersion }}-igbinary \
{% endif %}
php{{ phpVersion }}-imap \
        php{{ phpVersion }}-intl \
{% if phpVersion < "8.0" %}
	php{{ phpVersion }}-json \
{% endif %}
php{{ phpVersion }}-ldap \
        php{{ phpVersion }}-mbstring \
{% if phpVersion < "8.2" %}
	php{{ phpVersion }}-mcrypt \
{% endif %}
php{{ phpVersion }}-mysql \
        php{{ phpVersion }}-bcmath \
        php{{ phpVersion }}-pgsql \
        php{{ phpVersion }}-phpdbg \
        php{{ phpVersion }}-soap \
        php{{ phpVersion }}-sqlite3 \
        php{{ phpVersion }}-xdebug \
        php{{ phpVersion }}-xml \
        php{{ phpVersion }}-zip \
    && apt-get install -y \
        graphicsmagick \
        language-pack-en \
        language-pack-de \
        zip \
        unzip \
    && apt-get --purge -y autoremove \
    && apt-get autoclean \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && phpdismod xdebug
